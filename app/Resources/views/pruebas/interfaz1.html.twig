{% extends 'juego/layout.html.twig' %}

{% block pantallajuego %}

    <div id="tablas_stats">
        <div  class=tabla_equipo>
            <p class="titulo_equipo"> <span class="letra_equipo">CABEZA_</span>
                <span class="letra_equipo_sub">EQUIPADO</span>
            </p>
            <p>
                <span class="nombre_arma">Cyber Mask</span>
            </p>
            <p><span class="letra_stat">DEF</span></p>
            <p><span class="letra_stat">EVA</span></p>
            <p><span class="letra_stat">RES</span></p>
        </div>

    </div>
{% endblock %}
{%  block stylesheets %}
    {{ parent() }}
    <style>

        body{
            background-color: #000000;
        }
        #tablas_stats{
            margin:2.5em 1em 0.5em;
            width: 30%;
        }
        .tabla_equipo{
            width:100%;
            display:inline-block;
            border-top: 1px outset  #d37491;
            border-bottom: 1px inset rgba(211,10,80,1);
            border-left:1px outset  #d37491;
            border-right:1px inset  #d37491;
            margin-top:0.3em;
        }
        .tabla_equipo:hover{
            background-color: rgba(0,255,200,0.2);

        }
        .letra_top{
            font-family: MatrixBook;
            font-weight: bolder;
            color: rgba(182,255,192,0.8);
        }
        .letra_sub{
            font-weight: bold;
            font-family: candara;
            font-style: italic;
            color: rgba(182,255,192,0.4);
        }
        .letra_lvl{
            font-family: MatrixBoldSmallCaps;
            color: rgba(182,255,192,0.4);
        }
        .letra_equipo{

            font-family: MatrixBook;
            font-weight: bolder;
            color: #d37491;
        }
        .letra_equipo_sub{

            font-family: MatrixBook;
            font-weight: lighter;
            color: rgba(211,10,80,1);
        }
        .nombre_arma{
            margin-left:20%;
            font-family:ModMatrix;
            color: rgba(0,255,180,0.8);
        }
        .letra_stat{
            margin-left: 20%;
            font-family: ModMatrix;
            color:#d37491;
        }
        .titulo_equipo{
            border-bottom: 0.5px solid rgba(211,10,80,1);
        }
        .resaltado{
            background-color:rgba(0,255,200,0.2);
        }
    </style>
{% endblock %}